{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate venv",
            "type": "shell",
            "command": "python3 -m venv venv && source venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
        },
        {
            "label": "generate requirements",
            "type": "shell",
            "command": "source venv/bin/activate && pip freeze > requirements.txt"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py runserver"
        },
        {
            "label": "migrate",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py migrate"
        },
        {
            "label": "make migrations core",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py makemigrations core"
        },
        {
            "label": "make migrations ident",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py makemigrations ident"
        },
        {
            "label": "test all",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py test"
        },
        {
            "label": "test core",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py test core"
        },
        {
            "label": "test ident",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py test ident"
        },
        {
            "label": "create superuser",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py createsuperuser"
        },
        {
            "label": "collect static",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py collectstatic"
        },
        {
            "label": "check deploy",
            "type": "shell",
            "command": "source venv/bin/activate && python manage.py check --deploy"
        }
    ]
}